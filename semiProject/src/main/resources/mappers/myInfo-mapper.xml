<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="myInfoMapper">
	
	
	<!-- 회원 정보 수정 -->
	<update id="updateInfo" parameterType="Member">
		UPDATE "MEMBER" SET
		MEMBER_PW = #{memberPw},
		MEMBER_NAME = #{memberName},
		MEMBER_NICKNAME = #{memberNickname},
		MEMBER_ADDRESS  = #{memberAddress},
		MEMBER_EMAIL = #{memberEmail},
		MEMBER_PHONENUM  = #{memberPhoneNum}
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 회원 프로필 이미지 수정 -->
	<update id="updateProfile">
		UPDATE "MEMBER" SET
		MEMBER_PROFILE_IMG = #{profileImage}
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 비밀번호 조회 -->
	<select id="selectEncPw" parameterType="_int" resultType="string">
		SELECT MEMBER_PW FROM "MEMBER" WHERE MEMBER_NO = #{memberNo}
	</select>
	
	<!-- 회원 탈퇴 -->
	<update id="withdrawal" parameterType="_int">
		UPDATE "MEMBER" SET
		MEMBER_SECESSION = 'Y'
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
  
</mapper>
