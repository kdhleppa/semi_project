<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="memberMapper">
	
	<resultMap type="Member" id="member_rm">
	
		<!-- DB의 기본 키(복합키면 여러 개 작성) -->
		<id property="memberNo" column="MEMBER_NO" />

		<!-- DB의 일반 컬럼들 -->
		<result property="managerNo" column="MANAGER_NO" />
		<result property="memberId" column="MEMBER_ID" />
		<result property="memberPw" column="MEMBER_PW" />
		<result property="memberName" column="MEMBER_NAME" />
		<result property="memberNickname" column="MEMBER_NICKNAME" />
		<result property="memberAddress" column="MEMBER_ADDRESS" />
		<result property="memberEmail" column="MEMBER_EMAIL" />
		<result property="memberPhoneNum" column="MEMBER_PHONENUM" />
		<result property="profileImage" column="MEMBER_PROFILE_IMG" />
		<result property="memberSecession" column="MEMBER_SECESSION" />
	</resultMap>
	
	
	<select id="login" parameterType="Member" resultMap="member_rm">
  		SELECT MEMBER_NO, MEMBER_ID, MEMBER_PW, MEMBER_NAME, MEMBER_NICKNAME,
			MEMBER_ADDRESS, MEMBER_EMAIL, MEMBER_PHONENUM, MEMBER_PROFILE_IMG, MEMBER_SECESSION
		FROM "MEMBER"
		WHERE MEMBER_SECESSION = 'N'
		AND MEMBER_ID = #{memberId}
	</select>
	
	
	<insert id="signUp" parameterType="Member">
		INSERT INTO "MEMBER"
		VALUES(SEQ_MEMBER_NO.NEXTVAL
			, #{managerNo}
			, #{memberId}
			, #{memberPw}
			, #{memberName}
			, #{memberNickname}
			, #{memberAddress}
			, #{memberEmail}
			, #{memberPhoneNum}
			, #{memberProfileImage}
			, DEFAULT)
	</insert>
	
	
	
</mapper>
