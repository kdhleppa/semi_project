<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ajaxMapper">
	
	<resultMap type="Member" id="member_rm">
	
		<!-- DB의 기본 키(복합키면 여러 개 작성) -->
		<id property="memberNo" column="MEMBER_NO" />

		<!-- DB의 일반 컬럼들 -->
		<result property="managerNo" column="MANAGER_NO" />
		<result property="memberId" column="MEMBER_ID" />
		<result property="memberPw" column="MEMBER_PW" />
		<result property="memberName" column="MEMBER_NAME" />
		<result property="memberNickname" column="MEMBER_NICKNAME" />
		<result property="memberAddress" column="MEMBER_ADDRESS" />
		<result property="memberEmail" column="MEMBER_EMAIL" />
		<result property="memberPhoneNum" column="MEMBER_PHONENUM" />
		<result property="profileImage" column="MEMBER_PROFILE_IMG" />
		<result property="memberSecession" column="MEMBER_SECESSION" />
	</resultMap>
	
	<!-- 이메일 중복 검사 -->
	<select id="checkEmail" resultType="_int">
		SELECT COUNT(*) FROM "MEMBER"
		WHERE MEMBER_EMAIL = #{email}
	</select>
	
	<!-- 닉네임 중복 검사 -->
	<select id="checkNickname" resultType="_int">
		SELECT COUNT(*) FROM "MEMBER"
		WHERE MEMBER_NICKNAME = #{nickname}
	</select>
	
	<!-- 아이디 중복 검사 -->
	<select id="checkId" resultType="_int">
		SELECT COUNT(*) FROM "MEMBER"
		WHERE MEMBER_ID = #{id}
	</select>

	<!-- 이름과 휴대폰 번호로 아이디 조회 -->
	<select id="selectMemberId" resultType="string">
		SELECT MEMBER_ID
		FROM "MEMBER"
		WHERE MEMBER_NAME = #{name}
		AND MEMBER_PHONENUM = #{phoneNum}
		AND MEMBER_SECESSION = 'N'
	</select>



</mapper>
